<div class="container">
    <form action="/reminder/:id/edit" method="POST">
      <div class="form-group">
        <input type="hidden" id="idInput" value="<%= reminderItem.id %>" name="id">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="titleInput" value="<%= reminderItem.title %>" name="title">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="descriptionInput" rows="3"
          name="description"> <%= reminderItem.description %> </textarea>
      </div>
      <div class="form-group">
  
  
        <% if (reminderItem.completed==false || reminderItem.completed==="false" ) { %>
          <label for="completed">Completed</label>
          <input type="radio" id="false" name="completed" value="false" checked>
          <label for="false">False</label>
          <input type="radio" id="true" name="completed" value="true">
          <label for="true">True</label>
  
          <% } else if (reminderItem.completed==true || reminderItem.completed==="true" ) { %>
            <label for="completed">Completed</label>
            <input type="radio" id="false" name="completed" value="false">
            <label for="false">False</label>
            <input type="radio" id="true" name="completed" value="true" checked>
            <label for="true">True</label>
            <% } %>
  
              <button type="submit">Update</button>
              <a class="pull-right" href=<%="/reminder/" %>>Cancel</a>
    </form>
  </div>